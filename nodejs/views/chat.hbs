<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Nerds - Live Chat</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    {{> header}}

    <main class="container">
        <section class="hero">
            <h1>Live Chat</h1>
            <p class="tagline">Chat with fellow Book Nerds in real-time!</p>
        </section>

        <section class="welcome-section">
            <!-- Connection Status -->
            <div id="status" class="success-message">Status: Not connected</div>

            <!-- Chat Messages -->
            <div id="messages" style="height: 300px; overflow-y: auto; margin-bottom: 1rem; padding: 0.5rem; background: #f8f9fa; border-radius: 5px;">
                {{#each messages}}
                    <p>[{{this.created_at}}] {{this.displayName}}: {{this.message}}</p>
                {{/each}}

            </div>


            <!-- Chat Input -->
            <div style="display: flex; gap: 0.5rem;">
                <input id="chatInput" type="text" placeholder="Type a message..." style="flex: 1; padding: 0.6rem 1rem; border-radius: 5px; border: 1px solid #ccc;" />
                <button id="sendChat" class="cta-button">Send</button>
            </div>
        </section>
    </main>

    {{> footer}}

    <!-- Include Socket.IO client library -->
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script>

    // Disconnect old socket if it exists
    if (window.socket) {
        window.socket.disconnect();
        console.log('Old socket disconnected');
    }

    // Create a new socket and store it globally
    window.socket = io(); 

    const socket = window.socket; // easier local reference

        const status = document.getElementById('status');
        const messagesDiv = document.getElementById('messages');
        const chatInput = document.getElementById('chatInput');
        const sendChat = document.getElementById('sendChat');

        // Connection status
        socket.on('connect', () => {
            console.log('Socket connected, ID: ', socket.id);
            status.textContent = 'Status: Connected (ID: ' + socket.id + ')';
            status.className = 'success-message';
        });
        socket.on('disconnect', () => {
            console.log('Socket Disconnected');
            status.textContent = 'Status: Disconnected';
            status.className = 'error-message';
        });

        // Receive chat messages from server
        socket.on('chat', (data) => {
            const p = document.createElement('p');
            p.textContent = `[${new Date(data.timestamp).toLocaleTimeString()}] ${data.user}: ${data.message}`;
            messagesDiv.appendChild(p);
            messagesDiv.scrollTop = messagesDiv.scrollHeight; // auto-scroll
        });

        // Optional: listen for errors
        socket.on('error', (error) => {
            console.error('Socket error:', error);
            status.textContent = 'Error: ' + error.message;
            status.className = 'error-message';
        });

        // Send chat message
        function sendMessage() {
            const msg = chatInput.value.trim();
            if (!msg) return;
            socket.emit('chat', msg);
            chatInput.value = '';
        }

        sendChat.addEventListener('click', sendMessage);
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });
    </script>
</body>
</html>
