<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - Book Nerds</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    {{> header}}

    <main class="container">
        <section class="profile-section">
            

            <h1>{{user.display_name}}'s Profile Page</h1>
            {{#if error}}
                <div class = "error-message">
                    <p> {{error}}</p>
                    <ul>
                        {{#each errorList}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}
            {{#if success}}
                <div class = "success-message">
                    <p>âœ… {{success}}</p>
                </div>
            {{/if}}
            <!-- Account Management -->
            <div class="card">
                <h2>Account Management</h2>

                <form id="change-password-form" method="POST" action="/profile"> 
                    <h3>Change Password</h3>
                    <label for="current-password">Current Password</label>
                    <input type="password" id="current-password" name="currentPassword" required>

                    <label for="new-password">New Password</label>
                    <input type="password" id="new-password" name="newPassword" required>

                    <button type="submit" class="btn">Update Password</button>
                </form>
                <script>
                document.getElementById('change-password-form').addEventListener('submit', function(e) {
                    console.log('Form submitted!');
                    console.log('Current password:', document.getElementById('current-password').value);
                    console.log('New password:', document.getElementById('new-password').value);
                });
                </script>

                <form id="change-email-form" method ="POST" action="/profile">
                    <h3>Change Email</h3>
                    <label for="current-password-email">Current Password</label>
                    <input type="password" id="current-password-email" name="currentPasswordEmail" required>

                    <label for="new-email">New Email</label>
                    <input type="email" id="new-email" name="newEmail" required>

                    <button type="submit" class="btn">Update Email</button>
                </form>

                <form id="change-display-name-form" method="POST" action="/profile">
                    <h3>Change Display Name</h3>
                    <label for="display-name">New Display Name</label>
                    <input type="text" id="display-name" name="displayName" maxlength="30" required>

                    <button type="submit" class="btn">Update Display Name</button>
                </form>
            </div>

            <!-- Profile Customization -->
            <div class="card">
                <h2>Profile Customization</h2>

                <form id="profile-customization-form">
                    <label for="profile-color">Profile Name Color</label>
                    <input type="color" id="profile-color" name="profileColor" value="#000000">

                    <button type="submit" class="btn">Save Customization</button>
                </form>
            </div>
        </section>
    </main>

    {{> footer}}
</body>
</html>
